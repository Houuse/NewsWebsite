@model List<NewsWebsite.Models.Category>
@{
    ViewData["Title"] = "Home";
}

<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-md-6 mb-4">
            <h2>@category.Name</h2>
            @foreach (var article in category.Articles.Take(3))
            {
                <div class="card mb-3">
                    @if (!string.IsNullOrEmpty(article.ImageUrl))
                    {
                        <img src="@article.ImageUrl" class="card-img-top" alt="@article.Title">
                    }
                    <div class="card-body">
                        <h5 class="card-title"><a asp-controller="Article" asp-action="Details" asp-route-id="@article.Id">@article.Title</a></h5>
                        <p class="card-text">@article.Content.Substring(0, Math.Min(100, article.Content.Length))...</p>
                        <p class="card-text"><small class="text-muted">By @article.Author.FullName on @article.PublishDate.ToShortDateString()</small></p>
                    </div>
                </div>
            }
        </div>
    }
</div>