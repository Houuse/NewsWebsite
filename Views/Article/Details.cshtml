@model NewsWebsite.Models.Article
@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-md-8">
        <h1>@Model.Title</h1>
        <p class="text-muted">By @Model.Author.FullName on @Model.PublishDate.ToShortDateString() | Category: @Model.Category.Name</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid mb-3" alt="@Model.Title">
        }

        @if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
            <video controls class="img-fluid mb-3">
                <source src="@Model.VideoUrl" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        }

        @if (!string.IsNullOrEmpty(Model.AudioUrl))
        {
            <audio controls class="mb-3">
                <source src="@Model.AudioUrl" type="audio/mpeg">
                Your browser does not support the audio element.
            </audio>
        }

        <div>@Html.Raw(Model.Content)</div>

        <h3>Tags</h3>
        <div>
            @foreach (var tag in Model.Tags)
            {
                <span class="badge bg-secondary">@tag.Name</span>
            }
        </div>

        <h3>Comments</h3>
        @foreach (var comment in Model.Comments)
        {
            <div class="card mb-2">
                <div class="card-body">
                    <p>@comment.Content</p>
                    <p class="text-muted">By @comment.Author.FullName on @comment.CommentDate.ToShortDateString()</p>
                    @if (User.Identity.IsAuthenticated && (comment.Author.Id == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value || User.IsInRole("Admin")))
                    {
                        <form asp-controller="Comment" asp-action="DeleteComment" method="post" class="d-inline">
                            <input type="hidden" name="commentId" value="@comment.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    }
                </div>
            </div>
        }

        @if (User.Identity.IsAuthenticated)
        {
            <h4>Add a Comment</h4>
            <form asp-controller="Comment" asp-action="AddComment" method="post">
                <input type="hidden" name="articleId" value="@Model.Id" />
                <div class="mb-3">
                    <textarea name="content" class="form-control" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        }
    </div>
</div>